<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDivider"
    tools:context=".MainActivity">

    <include layout="@layout/item_1" />

    <include layout="@layout/item_2" />

    <include layout="@layout/item_3" />

    <include layout="@layout/item_4" />

    <include layout="@layout/item_5" />

    <Button
        android:id="@+id/btn_AngleSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AngleSeekBar"
        app:layout_constraintTop_toBottomOf="@id/btn_LineWaveVoice"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_AngleSeekBar"
        app:layout_constraintStart_toEndOf="@id/btn_AngleSeekBar"
        android:layout_marginStart="8dp"
        android:text="国家"/>

    <Button
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/btn_AngleSeekBar"
        app:layout_constraintStart_toEndOf="@id/country"
        android:layout_marginStart="8dp"
        android:textAllCaps="false"
        android:text="ViewPager2嵌套"/>

    <Button
        android:id="@+id/btn_Path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PathAnimator"
        app:layout_constraintTop_toBottomOf="@id/btn_AngleSeekBar"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/btn_tx_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TxPlayer"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/btn_Path"
        app:layout_constraintStart_toEndOf="@id/btn_Path"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/btn_recycle_spine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinned"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/btn_Path"
        app:layout_constraintStart_toEndOf="@id/btn_tx_player"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/btn_floatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FloatView"
        app:layout_constraintTop_toBottomOf="@id/btn_Path"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mp3录音"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/btn_floatView"
        app:layout_constraintStart_toEndOf="@id/btn_floatView"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_PictureInPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PictureInPicture"
        app:layout_constraintTop_toBottomOf="@id/btn_floatView"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>