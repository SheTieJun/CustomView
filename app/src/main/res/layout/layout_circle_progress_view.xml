<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="18dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成长攻略"
        android:textColor="#ff1b1c21"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.shetj.custom.CircleProgressView
        android:id="@+id/progress_level"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:backProgressWith="6dp"
        app:progressWith="10dp"
        app:backProgressColor="#EBEBEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/tv_level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffeba21"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/progress_level"
        app:layout_constraintEnd_toEndOf="@id/progress_level"
        app:layout_constraintStart_toStartOf="@id/progress_level"
        app:layout_constraintTop_toTopOf="@id/progress_level" />

    <TextView
        android:id="@+id/tv_level_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="距下一等级还需坚持学习77天"
        android:textColor="#ff1b1c21"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_level" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_level_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/level_des_img"
                android:lineSpacingExtra="1.5dp"
                android:textColor="#ff787a8b"
                android:textSize="12sp" />


<!--"https://staticqc.lycheer.net/account3/static/media/levelrule.45f3b2f1.png"-->
            <ImageView
                android:id="@+id/iv_level_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#ff787a8b"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/level_des"
                android:textColor="#ff787a8b"
                android:lineSpacingExtra="1.5dp"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>