<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/btn_halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HaloView"
        app:layout_constraintTop_toBottomOf="@id/btn_cir"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_transition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/btn_halo"
        app:layout_constraintTop_toTopOf="@id/btn_halo"
        android:text="transition" />


    <Button
        android:id="@+id/btn_StickyFinallyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/btn_transition"
        app:layout_constraintTop_toTopOf="@id/btn_halo"
        android:text="StickyFinallyView" />
</merge>